<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout
      android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:paddingTop="@dimen/activity_vertical_margin"
      android:paddingBottom="@dimen/activity_vertical_margin"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin">
      <LinearLayout
          android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnAbrirCuestionario"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Responder Cuestionario"
            android:textSize="24sp" />
        <!-- Último formulario -->
        <TextView
            android:id="@+id/tvLastFormTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Aún no se ha enviado el formulario"
            android:textSize="14sp" />

        <!-- Testigo MQTT -->
        <LinearLayout
            android:id="@+id/llMqttIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

          <TextView
              android:id="@+id/tvMqttIndicatorDot"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="●"
              android:textSize="18sp"
              android:textColor="#9E9E9E" />

          <TextView
              android:id="@+id/tvMqttIndicatorDetail"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="6dp"
              android:text="MQTT: desconectado"
              android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:orientation="horizontal">

          <Button
            android:id="@+id/btnGraphics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/graphics"/>
          <Button
            android:id="@+id/btnDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/str_detail"/>
          <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_blue_dark"
            android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
          android:id="@+id/rlSampling"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp">
          <Button
            android:id="@+id/btnStartSampling"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/str_start_sampling"
            android:textStyle="bold"  />

          <Button
            android:id="@+id/btnStopSampling"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/str_stop_sampling"/>
        </LinearLayout>
        <LinearLayout
          android:id="@+id/rlSelfTest"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:orientation="horizontal">

          <Button
            android:id="@+id/btnSetPatchClock"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/str_not_selftest"/>
          <Button
            android:id="@+id/btnSelfTest"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/str_upload_flash"/>
        </LinearLayout>

        <LinearLayout
          android:id="@+id/rlFlash"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp">
          <Button
            android:id="@+id/btnQueryFlash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/str_query_flash"/>
          <Button
            android:id="@+id/btnUploadFlash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/str_upload_flash"/>
          <Button
            android:id="@+id/btnCancelUpload"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/str_cancel_flash"/>
          <Button
            android:id="@+id/btnEraseFlash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/str_erase_flash"/>
        </LinearLayout>

        <LinearLayout
          android:id="@+id/rlSnInfo"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:orientation="horizontal">
          <Button
            android:id="@+id/btnReadSn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/str_read_sninfo"/>
        </LinearLayout>

        <LinearLayout
          android:id="@+id/rlUserInfo"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:orientation="horizontal">
          <Button
            android:id="@+id/btnReadUserInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/str_read_info"/>
          <Button
            android:id="@+id/btnSetUserInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/str_set_info"/>
          <Button
            android:id="@+id/btnEraseUserInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/str_erase_info"/>
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="5dp"
          android:orientation="horizontal">
          <Button
            android:id="@+id/btnReadPatchVersion"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/str_read_version"/>
          <Button
            android:id="@+id/btnReadDeviceInfo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/str_read_device_info"/>
        </LinearLayout>
        <Button
          android:id="@+id/btnCheckPatchStatus"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:gravity="center"
          android:text="@string/str_check_patch_status"/>
        <Button
          android:id="@+id/btnOTA"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="5dp"
          android:gravity="center"
          android:text="@string/str_ota"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/black"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


          <Button
              android:id="@+id/btnClearDatabase"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:text="@string/clear_database"
              />
          <Button
              android:id="@+id/btnExportMIT16"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:text="@string/export_to_mit16_file"
              />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/black"
            />

        <Button
          android:id="@+id/btnEngineerModule"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="5dp"
          android:gravity="center"
          android:text="@string/open_engineer"/>
      </LinearLayout>



    </RelativeLayout>

    <Button
      android:id="@+id/btnDisconnect"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginTop="5dp"
      android:layout_marginBottom="@dimen/activity_horizontal_margin"
      android:layout_marginLeft="@dimen/activity_horizontal_margin"
      android:layout_marginRight="@dimen/activity_horizontal_margin"
      android:background="@color/colorAccent"
      android:text="@string/disconnect"
      android:textColor="@color/white"/>
  </LinearLayout>

</ScrollView>